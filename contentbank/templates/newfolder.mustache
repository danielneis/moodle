{{!
    @template core_contentbank/newfolder
    Example context (json):
    {
        "parentid": 0
    }

}}
<form id="newfolder_form">
    <input type="hidden" id="parentid" name="parentid" value="{{{ parentid }}}}"/>
    <div class="form-check w-100 justify-content-start">
        <label for="newname">{{#str}}newfoldername, core_contentbank{{/str}}</label>
        <input type="text" size="5" id="newname" name="newname"  placeholder="{{#str}}newfolder, contentbank{{/str}}" value="" class="form-control text-ltr">
    </div>
</form>
